<div class="container" id="sale-title">
  <div class="row">
    <h1>Items for Sale</h1>
  </div>

  <div class="row row-cols-1 row-cols-md-3" id="item-list">
    {{#each Items}}
    <div class="col mb-4">
      <div class="card border-dark mb-3">
        <img src={{this.itemPhoto}} class="card-img-top" alt="item-photo" height="200px">
        <div class="card-body">
          <h5 class="card-title"><a href="item/{{this.id}}">{{this.itemName}}</a></h5>
          <p class="card-text">{{this.itemDescription}}</p>
        </div>
        <a href="#" button class="btn btn-warning btn-sm profile">Profile</a>
        <button class="btn btn-danger btn-sm delete">x</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>

