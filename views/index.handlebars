<div class="container-fluid" id="home">
  <p id="sale-title">Items for Sale</p>
</div>

<div class="container-fluid" id="items">
  <div class="card-columns" id="item-list">
    {{#each Items}}
    <div class="card" style="max-width: 400px;">
      <div class="row no-gutters">
        <div class="col-md-6">
          <img src={{this.itemPhoto}} class="card-img" alt="item-photo">
        </div>
        <div class="col-md-6">
          <div class="card-body" data-id="{{this.id}}">
            <h5 class="card-title"><a href="item/{{this.id}}">{{this.itemName}}</a></h5>
            <p class="card-text my-0">${{this.itemPrice}}</p>
            <p class="card-text text-muted"><i>{{this.itemCategory}}</i></p>
            <button class="btn btn-danger delete">x</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>