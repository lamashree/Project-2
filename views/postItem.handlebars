<div class="container">
    <div class="row">
        <div class="col">
            <h1>Post A New Item</h1>
            <form>
                <div class="alert-div" id="name-alert"></div>
                <div class="form-group">
                    <label for="item-name">Item Name</label>
                    <input type="text" class="form-control" id="item-name" placeholder="Enter a name for your item">
                </div>
                <div class="alert-div" id="description-alert"></div>
                <div class="form-group">
                    <label for="item-description">Item Description</label>
                    <input type="text" class="form-control" id="item-description"
                        placeholder="Enter a description for your item">
                </div>
                <div class="alert-div" id="category-alert"></div>
                <div class="form-group">
                    <label for="item-category">Item Category</label>
                    <select class="form-control" id="item-category">
                        <option selected>Select Category...</option>
                        <option>Antiques</option>
                        <option>Arts and Crafts</option>
                        <option>Audio</option>
                        <option>Auto Parts</option>
                        <option>Baby and Kids</option>
                        <option>Beauty and Health</option>
                        <option>Books and Magazines</option>
                        <option>Business</option>
                        <option>CDs and DVDs</option>
                        <option>Cell Phones</option>
                        <option>Clothing and Shoes</option>
                        <option>Collectibles</option>
                        <option>Computers</option>
                        <option>Electronics</option>
                        <option>Exercise</option>
                        <option>Farming</option>
                        <option>Furniture</option>
                        <option>Games and Toys</option>
                        <option>General</option>
                        <option>Home and Garden</option>
                        <option>Household</option>
                        <option>Jewelry</option>
                        <option>Music</option>
                        <option>Pets</option>
                        <option>Photography</option>
                        <option>Software</option>
                        <option>Sports and Outdoors</option>
                        <option>Tickets</option>
                        <option>Tools</option>
                        <option>Video Games</option>
                    </select>
                </div>
                <div class="alert-div" id="state-alert"></div>
                <div class="form-group">
                    <label for="item-state">Item State</label>
                    <select class="form-control" id="item-state">
                        <option selected>Select Item State...</option>
                        <option>New</option>
                        <option>Gently Used</option>
                        <option>Used</option>
                        <option>Worn</option>
                    </select>
                </div>
                <div class="alert-div" id="price-alert"></div>
                <div class="form-group">
                    <label for="item-price">Item Price</label>
                    <input type="text" class="form-control" id="item-price" placeholder="Enter a price for your item">
                </div>
                <div class="alert-div" id="street-alert"></div>
                <div class="form-group">
                    <label for="item-street">Your Street Address</label>
                    <input type="text" class="form-control" id="item-street" placeholder="Enter the street.">
                </div>
                <div class="alert-div" id="user-state-alert"></div>
                <div class="form-group">
                    <label for="item-user-state">State</label>
                    <select id="item-user-state" class="form-control">
                        <option selected>Choose...</option>
                        <option>AK</option>
                        <option>AL</option>
                        <option>AR</option>
                        <option>AZ</option>
                        <option>CA</option>
                        <option>CO</option>
                        <option>CT</option>
                        <option>DE</option>
                        <option>FL</option>
                        <option>GA</option>
                        <option>HI</option>
                        <option>ID</option>
                        <option>IL</option>
                        <option>IN</option>
                        <option>IA</option>
                        <option>KS</option>
                        <option>KY</option>
                        <option>LA</option>
                        <option>MA</option>
                        <option>MD</option>
                        <option>ME</option>
                        <option>MI</option>
                        <option>MN</option>
                        <option>MS</option>
                        <option>MO</option>
                        <option>MT</option>
                        <option>NE</option>
                        <option>NV</option>
                        <option>NH</option>
                        <option>NJ</option>
                        <option>NM</option>
                        <option>NY</option>
                        <option>NC</option>
                        <option>ND</option>
                        <option>OH</option>
                        <option>OK</option>
                        <option>OR</option>
                        <option>PA</option>
                        <option>RI</option>
                        <option>SC</option>
                        <option>SD</option>
                        <option>TN</option>
                        <option>TX</option>
                        <option>UT</option>
                        <option>VT</option>
                        <option>VA</option>
                        <option>WA</option>
                        <option>WV</option>
                        <option>WI</option>
                        <option>WY</option>
                    </select>
                </div>
                <div class="alert-div" id="photo-alert"></div>
                <div class="form-group">
                    <label for="item-photo">Item Photo URL</label>
                    <input type="text" class="form-control" id="item-photo"
                        placeholder="Enter a URL for the photo of your item">
                </div>
                <div class="alert-div" id="user-alert"></div>
                <div class="form-group">
                    <label for="item-username">Your Username</label>
                    <input type="text" class="form-control" id="item-username"
                        placeholder="Enter a unique username for yourself">
                </div>
                <button type="submit" class="btn btn-primary" id="submitItem">Submit</button>
            </form>
        </div>
    </div>
</div>

